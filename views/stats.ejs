<!DOCTYPE html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Stats
  </title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">
</head>
<style>
  .center {
    text-align: center;
  }

  .balance {
    font-size: 2rem;
    text-align: center;
  }

  .italics {
    font-style: italic;
  }

  body {
    margin: 0;
  }

  nav {
    background: cornflowerblue;
    padding: 20px 10px;
  }

  nav ul {
    max-width: 960px;
    margin: 0 auto;
    padding: 0;
  }

  nav li {
    list-style-type: none;
    display: inline-block;
    margin: 0 10px 0 0;
  }

  nav a {
    color: bisque;
    font-size: 18px;
    background: rgb(49, 105, 170);
    text-decoration: none;
    padding: 10px;
    display: block;
    border-radius: 10px;
  }

  .header {
    text-align: center;
  }

  main,
  header {
    max-width: 960px;
    margin: 30px auto;
    padding: 50px 80px;
    color: black;
  }

  form,
  main,
  header {
    width: 70%;
    margin: 0 auto;
  }

  table {
    padding: 50px 50px;
  }

  h3 {
    text-align: center;
    padding-top: 30px;
  }

  div {
    background: hsl(0, 0%, 95%);
    padding: 12px;
    border-radius: 4px;
  }

  div>h3 {
    word-wrap: break-word;
  }

  div>p {
    word-wrap: break-word;
  }

  div:not(:last-child) {
    margin-bottom: 12px;
  }

  .display_amount {
    text-align: center;
    display: inline-block;
  }
</style>

<body>

  <nav>
    <ul>
      <li>
        <form action="/">
          <input class="button-primary" type="submit" value="Home" /></form>
      </li>

      <% if (user) { %>
      <li>
        <form action="/auth/logout">
          <input class="button-primary" type="submit" value="Logout" /></form>
      </li>
      <li>
        <form action="/profile">
          <input class="button-primary" type="submit" value="Profile" /></form>
      </li>

      <% } else { %>
      <li>
        <form action="/auth/twitter">
          <input class="button-primary" type="submit" value="Login With Twitter" /></form>
      </li>
      <% } %>

    </ul>
  </nav>

  <main>
    <h1 class="header">Statistics</h1>
    <% transactions.reverse().forEach(function(transaction) { %>
      <div>
      <p>Sender:</p>
      <h3><%= transaction.send_name%></h3>
      <p><%= transaction.sender%></p>
      <p>Receiver:</p>
      <h3><%= transaction.receive_name%></h3>
      <p><%= transaction.receiver%></p>
      <p><%= transaction.amount%></p>
      <p><%= transaction.created%></p>
      </div>

    <% }) %>
   
  </main>

</body>


</html>
